<div class="well">
  <div class="row">
    <div class="panel panel-success thumbnail">
      <div class="panel-heading">
        <h3>
          Survey Statistics
        </h3>
      </div>
      <div class="panel-body">
        <table id='statistics' class="table table-condensed">
          <th></th><th>median</th><th>avg</th><th>var</th>
          <%- Survey::QUESTIONS.each_pair do |key, value| %>
            <tr>
              <td class="text-right row-title"><%= value %></td>
              <td><%= Survey.median(key.to_s) %></td>
              <td><%= Survey.avg(key.to_s).round(1) %></td>
              <td><%= Survey.var(key.to_s).round(1) %></td>
            </tr>
          <%- end -%>
        </table>
      </div>
    </div>
    <div class="row">
      <%= render @surveys %>
    </div>
  </div>
</div>
